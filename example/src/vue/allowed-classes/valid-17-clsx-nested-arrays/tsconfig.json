{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "strict": true,
    "plugins": [
      {
        "name": "tailwind-typescript-plugin",
        "globalCss": "./global.css",
        "validation": {
          "allowedClasses": [
            "custom-button",
            "app-header",
            "project-card"
          ]
        }
      }
    ]
  },
  "include": [
    "*.tsx",
    "*.vue"
  ]
}
